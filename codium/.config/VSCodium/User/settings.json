{
    "workbench.startupEditor": "none",
    "workbench.productIconTheme": "material-product-icons",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "explorer.confirmDragAndDrop": false,
    "editor.minimap.enabled": false,
    "redhat.telemetry.enabled": false,
    "workbench.sideBar.location": "left",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "terminal.integrated.fontFamily": "'Hack Nerd Font'",
    "editor.fontLigatures": false,
    "editor.fontFamily": " 'Hack Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontWeight": "bold",
    "python.experiments.optOutFrom": ["All"],
    "python.languageServer": "Jedi",
    "css.lint.emptyRules": "ignore",

    // Zen Mode Config
    "zenMode.hideStatusBar": false,
    "window.menuBarVisibility": "toggle",
    "zenMode.fullScreen": false,
    "zenMode.restore": true,

    // Windows and Tabs
    "workbench.editor.showTabs": "none",
    "zenMode.showTabs": "none",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 1,
    "files.autoSave": "onFocusChange",

    // Vim Config
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    //
    "vim.normalModeKeyBindingsNonRecursive": [
        //Format
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatDocument"]
        },
        // Toggle side pannel
        {
            "before": ["<leader>", "t"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        // Periscope and image searh toggle toggle
        {
            "before": ["<leader>", "o"],
            "commands": ["periscope.search"]
        },
        {
            "before": ["<leader>", "p"],
            "commands": ["workbench.action.quickOpen"]
        }
    ],
    // To improve performance,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1,
        "asvetliakov.vscode-neovim": 1
    },
    // Godot
    "[gdscript]": {
        "editor.defaultFormatter": "geequlim.godot-tools"
    },
    // Prettier
    "prettier.tabWidth": 4,
    // Astro formatter
    "prettier.documentSelectors": ["**/*.astro"],
    "[astro]": {
        "editor.defaultFormatter": "astro-build.astro-vscode"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "database-client.autoSync": true,
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "gruvboxMaterial.darkContrast": "hard",
    "gruvboxMaterial.darkPalette": "mix",
    "gruvboxMaterial.darkWorkbench": "flat",
    "workbench.iconTheme": "material-icon-theme",
    "blender.executables": [
        {
            "path": "/var/home/polycat/.local/bin/blender",
            "name": "",
            "isDebug": false,
            "linuxInode": 16670726
        }
    ],
    "go.toolsManagement.autoUpdate": true,
    "window.titleBarStyle": "native",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "C_Cpp.intelliSenseEngine": "disabled"
}
